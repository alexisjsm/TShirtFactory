{
  "name": "tshirtfactory-ecommerce",
  "version": "1.0.0",
  "description": "Ecommerce t-shirt",
  "scripts": {
    "build": "babel src --ignore **/__test__,**/**/seeders -d dist",
    "dev": "nodemon --exec babel-node -r dotenv/config src/bin/server.js",
    "server": "node -r dotenv/config dist/bin/server.js",
    "seeder": "babel-node -r dotenv/config src/bin/seeders/seeder.js",
    "lint": " eslint 'src/**/*.js'",
    "formatter": "prettier --check 'src/**/*.js' &  prettier --write 'src/**/*.js'",
    "test": "jest  --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest  --coverage --detectOpenHandles"
  },
  "author": "alexisjsm",
  "license": "MIT",
  "dependencies": {
    "@types/jest": "^26.0.14",
    "bcrypt": "^5.0.0",
    "cookie-parser": "^1.4.5",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "faker": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.5",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/eslint-parser": "^7.11.5",
    "@babel/eslint-plugin": "^7.11.5",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.11.5",
    "babel-jest": "^26.3.0",
    "commander": "^6.1.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.13.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "lint-staged": "^10.4.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
